<p id="notice"><%= notice %></p>

<h1>Booking List</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Status</th>
      <th>Advisor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timeslots.each do |timeslot| %>
      <tr>
        <td><%= timeslot.date.strftime("%d/%m/%Y") %></td>
        <td><%= timeslot.start_time.strftime("%I:%M") %></td>
        <td><%= timeslot.status %></td>
        <td><%= timeslot.advisor_id %></td>
        <td><%= link_to 'Edit', edit_timeslot_path(timeslot) %></td>
        <td><%= link_to 'Delete', timeslot, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

