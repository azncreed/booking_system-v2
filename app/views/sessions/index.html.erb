<p id="notice"><%= notice %></p>

<h1>Available Sessions</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Contact name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Timeslot</th>
      <th>Confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.contact_name %></td>
        <td><%= session.email %></td>
        <td><%= session.phone_number %></td>
        <td><%= session.timeslot %></td>
        <td><%= session.confirmation %></td>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Session', new_session_path %>
